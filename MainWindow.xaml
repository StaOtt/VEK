<Window x:Class="VEK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VEK"
        mc:Ignorable="d"
        Title="VEK" Height="365" Width="635"
        Background="#FF292B2F" WindowStyle="None" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- BEGIN Custom Window Title Bar -->
        <Grid Grid.Row="0" Background="#FF242426">
            <Grid.RowDefinitions>
                <RowDefinition Height="24" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="48" />
                <ColumnDefinition Width="48" />
            </Grid.ColumnDefinitions>
            <Button Name="minimizeBtn" Grid.Column="2">←</Button>
            <Button Name="closedBtn" Grid.Column="4">❌</Button>
        </Grid>
        <!-- END Custom Window Title Bar -->
    </Grid>
</Window>
